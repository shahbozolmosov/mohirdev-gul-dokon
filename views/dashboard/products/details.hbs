<!-- ========== card components start ========== -->
<section class="card-components">
  <div class="container-fluid">
    <!-- ========== title-wrapper start ========== -->
    <div class="title-wrapper pt-30">
      <div class="row align-items-center">
        <div class="col-md-6">
          {{>wrapperTitle label=title}}
        </div>
        <!-- end col -->
        <div class="col-md-6">
          {{>breadcrumb}}
        </div>
        <!-- end col -->
      </div>
      <!-- end row -->
    </div>
    <!-- ========== title-wrapper end ========== -->
    
    <div class="row mb-5">
      <div class="offset-3 col-md-6 my-5">
        <div class="title">
          <h2>Details - {{title}}</h2>
        </div>
      </div>
      <div class="offset-3 col-6">
        {{>productCard}}
      </div>
    </div>

    <hr/>

    {{! Comment list }}
    <div class="row">
      <div class="col-md-6 offset-3">
        {{#if comments}}
          {{#each comments}}
            <div class="card mb-3" style="max-width: 540px;">
              <div class="row g-0">
                <div class="col-md-2">
                  <img
                    src="https://img.freepik.com/premium-vector/bearded-man-avatar-man-vector-portrait_9385-36.jpg"
                    class="img-fluid rounded-start"
                    alt="..."
                  />
                </div>
                <div class="col-md-10">
                  <div class="card-body">
                    <h5 class="card-title">{{email}}</h5>
                    <p class="card-text">{{comment}}</p>
                    <p class="card-text"><small
                        class="text-body-secondary"
                      >{{createdAt}}</small></p>
                    {{!-- /:productId/:commentId/delete --}}
                    <a
                      class="btn btn-danger btn-hover rounded"
                      href="/dashboard/products/{{productId}}/{{id}}/delete"
                    >Delete</a>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        {{/if}}
      </div>
    </div>

  </div>
</section>